@{
    ViewData["Title"] = "Login";
}
@model news.Models.AuthModel.LoginData;

<p class="display-1 text-center">Login</p>

<form method="POST" enctype="multipart/form-data" asp-controller="Auth" asp-action="Login">
    <div class="form-group">
        <label for="username">Username:</label>
        <input type="text" name="username" id="username" placeholder="Username.." class="form-control"/>
    </div>
    <div class="form-group">
        <label for="pass">Password:</label>
        <input type="password" name="password" id="pass" placeholder="Password.." class="form-control"/>
    </div>
    <input type="submit" name="login" value="Login" class="btn btn-primary">
</form>


