<script type="text/javascript">
    const apiKey = "YOUR_API_KEY_HERE";
    axios.get("https://newsapi.org/v2/top-headlines?country=us&apiKey=" + apiKey).then(response => topnews(response.data));
    
    

    function topnews(odg) {
        var slika1 = document.getElementById("slika1");
        slika1.src = odg.articles[0].urlToImage;
        var slika2 = document.getElementById("slika2");
        slika2.src = odg.articles[1].urlToImage;
        var slika3 = document.getElementById("slika3");
        slika3.src = odg.articles[2].urlToImage;

        var naslov1 = document.getElementById("naslov1");
        naslov1.innerHTML = odg.articles[0].title + '<a target=_blank href="' + odg.articles[0].url + '" class="btn btn-primary" target="_blank">Full article</a>';
        var naslov2 = document.getElementById("naslov2");
        naslov2.innerHTML = odg.articles[1].title + '<a target=_blank href="' + odg.articles[1].url + '" class="btn btn-primary" target="_blank">Full article</a>';
        var naslov3 = document.getElementById("naslov3");
        naslov3.innerHTML = odg.articles[2].title + '<a target=_blank href="' + odg.articles[2].url + '" class="btn btn-primary" target="_blank">Full article</a>';

        

        for (var i = 1; i < 7; i++) {
            var ime = "div" + i;
            document.getElementById(ime).innerHTML = '<div class="card" style="width: 20rem;">' +
                '<img class="card-img-top" src = "' + odg.articles[i + 2].urlToImage + '">' +
                '<div class="card-body">'+
            '<h5 class="card-title">' + odg.articles[i + 2].title + '</h5>'+
            
            '<a href="' + odg.articles[i + 2].url + '" class="btn btn-primary">Full article</a>' +
                    '</div></div>';
        }

    }
</script>

